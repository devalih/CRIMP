<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/QRScan_root_viewgroup"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout android:id="@+id/QRScan_frame_viewgroup"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content" >
        
    </FrameLayout>
    
    <LinearLayout android:id="@+id/QRScan_status"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" 
        android:paddingLeft="16dp"
        android:paddingRight="16dp" 
        android:orientation="vertical" >
        
        <LinearLayout android:id="@+id/QRScan_status_row1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:orientation="horizontal" >
        
            <TextView 
                android:id="@+id/QRScan_round_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />
            
            <EditText
		        android:id="@+id/QRScan_climber_id_edit"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:hint="@string/UI_climber_id" 
		        android:inputType="number"/>
            
            <Button
	            android:id="@+id/QRScan_rescan_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/UI_rescan" 
		        android:onClick="rescan"/>
            
            <Button
	            android:id="@+id/QRScan_flash_button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/UI_flash" 
		        android:onClick="toggleFlash"/>
            
        </LinearLayout>    
            
        <EditText 
            android:id="@+id/QRScan_climber_name_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        	android:hint="@string/UI_climber_name"
        	android:clickable="false" 
	        android:cursorVisible="false" 
	        android:focusable="false" 
	        android:focusableInTouchMode="false" />
        
        <Button
            android:id="@+id/QRScan_next_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/UI_next" 
	        android:onClick="next"/>
        
    </LinearLayout>
    
</LinearLayout>
