<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >
    
    <LinearLayout android:id="@+id/row_title_layout"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="horizontal" >
    	
        <TextView android:id="@+id/row_cid"
            android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
	        android:textSize="@dimen/abc_action_bar_title_text_size" />

       	<TextView android:id="@+id/row_rid"
       	    android:layout_width="0dp"
        	android:layout_height="wrap_content"
        	android:layout_weight="1"
           	android:textSize="@dimen/abc_action_bar_title_text_size" />
    	
    </LinearLayout>
    
    <LinearLayout android:id="@+id/row_content_layout"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:orientation="vertical"
    	android:layout_below="@id/row_title_layout">
       	
        <TextView android:id="@+id/row_status"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content" 
           	android:textSize="@dimen/abc_action_bar_subtitle_text_size" />
		
        <TextView  android:id="@+id/row_time"
            android:layout_width="fill_parent"
    		android:layout_height="wrap_content" 
            android:textSize="@dimen/abc_action_bar_subtitle_text_size" />	
        
        <ProgressBar android:id="@+id/row_progress_bar"
            android:layout_width="fill_parent"
         	android:layout_height="wrap_content"
    		style="@android:style/Widget.ProgressBar.Horizontal" />
        
    </LinearLayout>

</RelativeLayout>
