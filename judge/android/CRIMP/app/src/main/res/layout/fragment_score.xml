<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light" >

    <Button
        android:id="@+id/scoring_submit_button"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/white"
        android:onClick="scoreSubmit"
        android:text="submit" />

    <LinearLayout android:id="@+id/scoring_button_row"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="27.0"
        android:orientation="horizontal"
        android:layout_above="@id/scoring_submit_button" >

        <Button
            android:id="@+id/scoring_plus_one_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.0"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:text="+1"
            android:onClick="scorePlusOne" />

        <Button
            android:id="@+id/scoring_b_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.0"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:text="B"
            android:onClick="scoreBonus" />

        <Button
            android:id="@+id/scoring_t_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.0"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:text="T"
            android:onClick="scoreTop" />

        <Button
            android:id="@+id/scoring_backspace_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="11.0"
            android:textColor="@color/white"
            android:text="Backspace"
            android:enabled="false"
            android:onClick="scoreBackspace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoring_t_b_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_above="@id/scoring_button_row"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T"
            android:gravity="center"
            android:textSize="32sp" />
        <TextView
            android:id="@+id/scoring_t_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/scoring_b_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textSize="32sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/scoring_route_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="placeholder category\nplaceholder route"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/material_blue_grey_800"
        android:layout_below="@id/scoring_route_text"/>

    <TableLayout android:id="@+id/scoring_climber_info"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoring_route_text"
        android:stretchColumns="1"
        android:shrinkColumns="1" >

        <TableRow >

            <TextView
                android:id="@+id/scoring_climber_id_text"
                android:textColor="@color/white"
                android:text="Climber Id" />

            <EditText
                android:id="@+id/scoring_climber_id_edit"
                android:textColor="@color/white"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </TableRow>

        <TableRow >

            <TextView
                android:id="@+id/scoring_climber_name_text"
                android:textColor="@color/white"
                android:text="Climber name" />

            <EditText
                android:id="@+id/scoring_climber_name_edit"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </TableRow>

    </TableLayout>

    <View
        android:id="@+id/scoring_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:layout_below="@id/scoring_climber_info"/>

    <ScrollView android:id="@+id/scoring_scroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/scoring_divider"
        android:layout_above="@id/scoring_t_b_row">

        <LinearLayout android:id="@+id/scoring_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/scoring_old_score_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Previous accumulated score" />

            <EditText
                android:id="@+id/scoring_score_history_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="loading..."/>

            <EditText
                android:id="@+id/scoring_score_current_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@color/white"
                android:hint="Current session score"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>